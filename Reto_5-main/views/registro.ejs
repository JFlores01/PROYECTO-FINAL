<%- include("templates/cabeceralogin.ejs", {tituloWeb:'Login'}) %>






  <section class="resultados" id="resultados mt-5">
    <div class="container py-3 mb-3">
      <div class="text-center">
        <p>&nbsp;</p>
        <br>
        <h2>REGISTRO</h2>
        <p class="lead">Regístrate para acceder</p>
      </div>
      <div class="container mt-3">
        <form class="formulario__register" id="formulario__register">
          <div class="mb-3 mt-3">
            <label for="nombre"> <p>Nombre:</p></label>
            <input type="nombre" class="form-control" id="nombre" placeholder="Introduzca nombre" name="nombre" required>
          </div>
          <div class="mb-3">
            <label for="pwd"><p>Correo Electrónico:</p></label>
            <input type="email" class="form-control" id="email" placeholder="Introduzca email" name="email" required>
          </div>
          <div class="mb-3">
            <label for="pwd"><p>Contraseña:</p></label>
            <input type="password" class="form-control" id="pswd" placeholder="Introduzca contraseña" name="pswd" required>
          </div>

          <div class="mb-3">
            <label for="pwd"><p>Repetir Contraseña:</p></label>
            <input type="password" class="form-control" id="pswd2" placeholder="Introduzca contraseña" name="pswd2" required>
          </div>

<!-- ELEGIR EQUIPO -->

          <div class="dropdown">
            <button class="btn btn-secondary dropdown-toggle mb-3" type="button" id="dropdownMenuButton2" data-bs-toggle="dropdown" aria-expanded="false">
              Tu Equipo
            </button>
            <ul class="dropdown-menu dropdown-menu-dark" aria-labelledby="dropdownMenuButton2">
              <li><a class="dropdown-item active" href="#">Betis</a></li>
              <li><a class="dropdown-item" href="#">Barcelona</a></li>
              <li><a class="dropdown-item" href="#">Madrid</a></li>
              <li><a class="dropdown-item" href="#">Sevilla</a></li>
            </ul>
          </div>
          <button type="submit" class="btn btn-primary">Registrarme</button> <br><br>
          <a href="/">Si ya estas registrado, Inicia Sesión</a>
        </form>
      </div>
    </div>
  </section>
  <footer class="bg-dark text-center text-white py-3">
    <p class="h4">
        La pasión por el fútbol español se refleja en cada partido de la liga.
    </p>
    <small class="text-secondary h5">¡Sé parte de ella con nuestra página de resultados!</small>
</footer>


