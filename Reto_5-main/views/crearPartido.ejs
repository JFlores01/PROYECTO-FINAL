<%- include("templates/cabecera", {tituloWeb: 'Crear Partido' }) %>
    <div class="container">
        <h1>Crear nuevo Partido</h1>
        <form action="/partidos" class="my-2" method="POST">
            <input type="text" placeholder="Local" class="form-control my-2" name="local_name">
            <input type="text" placeholder="Visitante" class="form-control my-2" name="visit_name">
            <input type="text" placeholder="Estadio" class="form-control my-2" name="stadium_name">
            <input type="text" placeholder="Capacidad" class="form-control my-2" name="stadium_capacity">
            <input type="text" placeholder="Fecha" class="form-control my-2" name="match_date">
            <input type="text" placeholder="Hora" class="form-control my-2" name="match_time">
            <input type="text" placeholder="Goles Local" class="form-control my-2" name="local_goals">
            <input type="text" placeholder="Goles Visitante" class="form-control my-2" name="visit_goals">
            <input type="text" placeholder="Escudo Local" class="form-control my-2" name="local_img">
            <input type="text" placeholder="Escudo Visitante" class="form-control my-2" name="visit_img">
            <button type="submit" class="btn btn-dark btn-block">
                Agregar
            </button>
        </form>
    </div>
<%- include("templates/footer") %>

